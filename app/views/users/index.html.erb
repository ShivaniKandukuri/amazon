<h1> Users listing page </h1>
<table>
  <thead>
    <tr>
      <th>Name: </th>
      <th>Email: </th>
      <th>Role: </th>
      <th colspan="3"> Actions : </th>
      </tr>
    </thead>
    <tbody>
      <% @users.each do |a| %>
      <tr>
        <td><%= a.name %></td>
        <td><%= a.email %></td>
        <td><%= a.role %></td>
        <td><%= link_to 'Show',user_path(a)%></td>
        <% if a==current_user %>

           <td><%= link_to 'Edit profile',edit_user_path(a)%></td>
          <td><%= link_to "Delete user", user_path(a), method: :delete,data: {confirm: "Are you sure you want to delete the user account"} %></td>
       <% end %>
      </tr>
      <% end %>
    </tbody>
</table>

<p>
  <%= link_to 'create new user',new_user_registration_path%>
</p>
<p><%= link_to 'Sign out',destroy_user_session_path,method: :delete %></p>
