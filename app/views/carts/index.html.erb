<h1> Carts listing page </h1>
<table>
  <thead>
    <tr>
      <th colspan="3"> Actions : </th>
      </tr>
    </thead>
    <tbody>
      <% @carts.each do |a| %>
      <tr>
        <td><%= link_to 'Show',cart_path(a)%></td>
        <td>
              <%= link_to "Edit", edit_cart_path(a) %>
              <%= link_to "Delete", cart_path(a),method: :delete, data: {confirm: "Are you sure?"} %>
        </td>
      </tr>
      <% end %>
    </tbody>
</table>


<%= link_to 'create new cart',new_cart_path%>
