<h1> Carts listing page </h1>
<table>
  <thead>
      <th>Name:</th>
      <th>Price:</th>
      <th colspan="3"> Actions : </th>
    </thead>
    <tbody>
        <% @carts.each do |a| %>
          <% a.cartitems.each do |b| %>
            <td>  <%= b.product.name %></td>
            <td>  <%= b.product.price %></td>
          <% end %>
        <td><%= link_to 'Show',cart_path(a)%></td>
        <td><%= link_to "Edit", edit_cart_path(a) %><td>
        <td><%= link_to "Delete", cart_path(a),method: :delete, data: {confirm: "Are you sure?"} %></td>
      <% end %>
    </tbody>
</table>


<%= link_to 'create new cart',new_cart_path%>
