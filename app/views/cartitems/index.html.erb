<h1> cartitemitems listing page </h1>
<table>
  <thead>
    <tr>
      <th>Product : </th>
      <th>Cart : </th>
      <th colspan="3"> Actions : </th>
      </tr>
    </thead>
    <tbody>
      <% @cartitems.each do |a| %>
      <tr>
        <td><%= a.product_id %></td>
        <td><%= a.cart_id %></td>
        <td><%= link_to 'Show',cartitem_path(a)%></td>
        <td>
              <%= link_to "Edit", edit_cartitem_path(a) %>
              <%= link_to "Delete", cartitem_path(a),method: :delete, data: {confirm: "Are you sure?"} %>
        </td>
      </tr>
      <% end %>
    </tbody>
</table>


<%= link_to 'create new cartitem',new_cartitem_path%>
